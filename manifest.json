{
  "manifest_version": 3,
  "name": "Amazon Music Player",
  "version": "1.0",
  "description": "Plays 'Everything is Awesome' when visiting Amazon or AWS pages",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://www.youtube.com https://www.youtube-nocookie.com; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.de/*",
        "*://*.amazon.fr/*",
        "*://*.amazon.it/*",
        "*://*.amazon.es/*",
        "*://*.amazon.jp/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.in/*",
        "*://*.amazon.com.au/*",
        "*://*.amazon.com.br/*",
        "*://*.amazon.com.mx/*",
        "*://*.aws.amazon.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "musiclogo.png",
    "128": "musiclogo.png"
  }
} 